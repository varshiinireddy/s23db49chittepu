extends layout
block content
  h1= title
  - let instruments = results;
  div(class="container-fluid")
    div(class="row m-1")
      each instrument in instruments
        - let destination = `dispatch(\"/instrument/update?id=${instrument._id}\")`
        div(class="row-sm-2", class="m-1") Instrument: #{instrument.name}(#{instrument.product_type}) Price is: #{instrument.price}
          button.btn( class="btn-primary ml-1", onclick= destination) Update
    script.
      function dispatch(path){
        window.location.href=path
      }


